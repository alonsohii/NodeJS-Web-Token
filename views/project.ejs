           $(document).on('change','#ComboPresupuesto',function(){
              if($('#ComboPresupuesto').val() == 11){
                $('#Personalizado').show();
              }else{
                $('#Personalizado').hide();
              }
           });

           $.get("http://localhost:8080/api/?token="+localStorage.getItem('tk'), function(data, status){

              if(data.success){
                loge = 1;
                $('#botones').hide();
                $("#acceso").hide();
                $("#registrot").hide();
